{
  "manifest_version": 3,
  "name": "Twitch Austrian Dialect Translator",
  "version": "1.0.0",
  "description": "Translates German text in Twitch chat to Austrian dialect",
  "author": "Your Name",
  "permissions": ["storage"],
  "host_permissions": ["*://*.twitch.tv/*"],
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["dictionary.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "twitch-austrian-translator@example.com",
      "strict_min_version": "109.0"
    }
  }
}
